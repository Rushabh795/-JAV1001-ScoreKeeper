<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_main_bg"
    android:weightSum="3"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="0.5"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        tools:text="Todays FIFA World Cup Final Match"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        tools:text="India won the toss and select to bat first"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:adjustViewBounds="true"
                tools:src="@drawable/indian"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:padding="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="INDIA"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="0.99"
                android:orientation="horizontal"
                >

            <ImageView
                android:id="@+id/imgSubscoreTeamOne"

                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:padding="5dp"
               android:src="@drawable/thumsdown"/>
                <TextView
                    android:id="@+id/tvScoreTeamOne"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:visibility="visible"
                    tools:text="3"/>

                <ImageView
                    android:id="@+id/imgAddscoreTeamOne"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"
android:padding="5dp"
                    android:src="@drawable/thumsup"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvScoreTeamOneFinal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:text="3"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:text="-"/>

        <TextView
            android:id="@+id/tvScoreTeamTwoFinal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            tools:text="4"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:adjustViewBounds="true"
                tools:src="@drawable/southafrica"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="0.3"
                android:padding="8dp"
                android:textSize="18dp"
                android:textStyle="bold"
                tools:text="SOUTH AFRICA"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:weightSum="0.99"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgSubscoreTeamTwo"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/thumsdown"/>
                <TextView
                    android:id="@+id/tvScoreTeamTwo"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:visibility="visible"
                    tools:text="4"/>

                <ImageView
                    android:id="@+id/imgAddscoreTeamTwo"

                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/thumsup"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>